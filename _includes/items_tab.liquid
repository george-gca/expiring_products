<div class="tab-pane fade {%- if include.tab_index == 0 %} show active{% endif %}" id="{{ include.collection }}-tab-pane" role="tabpanel" aria-labelledby="{{ include.collection }}-tab" tabindex="{{ include.tab_index }}">
  <div class="input-group my-3" id="{{ include.collection }}-search-container">
    <input type="search" class="form-control" id="{{ include.collection }}-search-input" placeholder="Search {{ include.collection | capitalize }}..." aria-label="Search {{ include.collection | capitalize }}">
  </div>
  <ul class="list-group list-group-flush list-unstyled mt-3" id="{{ include.collection }}-list"></ul>
  <!-- Floating add item button -->
  <div class="fixed-action-btn" style="height: 80px;">
    <button class="btn btn-floating text-white btn-lg" aria-label="{{ page.add_item }}" style="background-color: #f44336;" data-bs-toggle="modal" data-bs-target="#add-item-modal">
      <i class="fa-solid fa-plus"></i>
    </button>
  </div>
</div>